<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".InventoryGrid">

    <!-- HEADER ROW -->
    <LinearLayout
        android:id="@+id/menu_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/edit_list_col"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@drawable/login_background" />

        <TextView
            android:id="@+id/desc_col"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:text="@string/item_description_label"
            android:textColor="#E7D506"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingHorizontal="4dp"
            android:background="@drawable/login_background" />

        <TextView
            android:id="@+id/qty_col"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quantity"
            android:textColor="#E7D506"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingHorizontal="4dp"
            android:background="@drawable/login_background" />

        <TextView
            android:id="@+id/unitColumn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/catgy"
            android:textColor="#E7D506"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/login_background" />

        <TextView
            android:id="@+id/delBtnColumn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@drawable/login_background" />
    </LinearLayout>

    <!-- Inventory List -->
    <ListView
        android:id="@+id/inventory_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/inventory_list"
        app:layout_constraintTop_toBottomOf="@id/menu_header"
        app:layout_constraintBottom_toTopOf="@id/footer_menu_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FOOTER BUTTONS -->
    <LinearLayout
        android:id="@+id/footer_menu_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/footer_menu_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/add_item_icon"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:background="@color/black"
            android:contentDescription="@string/add_button_label"
            app:srcCompat="@drawable/add_item" />

        <ImageButton
            android:id="@+id/sms_button"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:background="@color/black"
            android:contentDescription="@string/send_sms_message_button"
            app:srcCompat="@drawable/sms_message" />

        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/black"/>

        <ImageButton
            android:id="@+id/delete_all"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:background="@color/black"
            android:contentDescription="@string/delete_all_button"
            app:srcCompat="@drawable/delete_item" />

        <TextView
            android:id="@+id/total_item_amount"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:textColor="#E7D506"
            android:textSize="24sp"
            android:hint="@string/_0"
            android:textColorHint="#E7D506"
            android:background="@color/black" />
    </LinearLayout>

    <!-- FOOTER LABELS -->
    <LinearLayout
        android:id="@+id/footer_menu_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewAddButtonLabel"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="@string/add_item"
            android:textColor="#E7D506"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/login_background" />

        <TextView
            android:id="@+id/textViewSmsButtonLabel"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="@string/sms"
            android:textColor="#E7D506"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/login_background" />

        <TextView
            android:id="@+id/textViewUserNameLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#E7D506"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:hint="@string/logged_user"
            android:background="@drawable/login_background" />

        <TextView
            android:id="@+id/delete_all_label"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="@string/delete_all"
            android:textColor="#E7D506"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/login_background" />

        <TextView
            android:id="@+id/total_item_amount_label"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:textColor="#E7D506"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/login_background" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
